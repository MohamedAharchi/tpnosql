doctype html
html(ng-app="cbsApp", lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
		
		link(href="/bower/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="/stylesheets/style.css", rel="stylesheet")   

        // [if lt IE 9] 
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        //[endif]
        title title
    body
		block main
            .media-body
                h4.media-heading Nouveau collaborateurs
                
                form(ng-show="new", ng-submit="newItem()")
					.form-group
                        label(for="prenom") Prénom
                        input.form-control#prenom(type="text", placeholder="Saisir le prénom")
                    .form-group
                        label(for="nom") Nom
                        input.form-control#nom(type="text", placeholder="Saisir le nom")                    
                    .form-group
                        label(for="dateNaissance") Date de naissance
                        input.form-control#dateNaissance(type="text", placeholder="Saisir la date de naissance")
                    .form-group
                        label(for="poste") Poste
                        input.form-control#post(type="text", placeholder="Saisir le poste")
                    .form-group
                        label(for="salaire") Salaire
                        .input-group
                            input.form-control#salaire(type="text", placeholder="Saisir le salaire")
                            .input-group-addon €
                    .form-group
                        label(for="entree") Date d'entrée
                        input.form-control#entree(type="text", placeholder="Saisir la date d'entrée'")
                    .form-group
                        label(for="mail") email
                        input.form-control#mail(type="email", placeholder="Saisir l'email'")
                    button(type="submit").btn-primary.btn Valider

                
